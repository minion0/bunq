{
  "compilerOptions": {
    "sourceMap": true,
    "rootDir": "./",
    "outDir": "./",
    "target": "ES5",
    "lib": ["es2015", "dom"],
    "noEmit": false,
    "allowJs": false,
    "types": ["node"],
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": false,
    "preserveConstEnums": false

  },
  "include": [
    "./",
    "./src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}